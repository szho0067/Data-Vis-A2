{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/szho0067/Data-Vis-A2/refs/heads/main/Data%20A2/Industry%20Pay.csv"
  },
  "transform": [
    {"filter": "datum['Years'] == selectYear"}
  ],
  "params": [
    {
      "name": "selectYear",
      "value": 2014,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "height": 300,
  "width": 450,
  "encoding": {
    "y": {
      "field": "State and territory",
      "type": "nominal",
      "axis": {"title": "State and Territory"}
    },
    "x": {
      "field": "Median Weekly Earnings",
      "type": "quantitative",
      "scale": {"domain": [0, 2500]},
      "title": "Median Weekly Earnings"
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {"field": "State and Territory", "type": "nominal"},
        "color": {"value": "#BBBBBB"}
      }
    },
    {
      "mark": {"type": "point", "filled": true},
      "encoding": {
        "tooltip": [
          {"field": "Industry", "type": "nominal", "title": "Industry"},
          {"field": "State and territory", "type": "nominal", "title": "State"},
          {
            "field": "Median Weekly Earnings",
            "type": "quantitative",
            "title": "Median Weekly Earnings"
          }
        ],
        "color": {
          "field": "Industry",
          "type": "nominal",
          "legend": {"title": "Industry"},
          "scale": {"scheme": "category10"}
        }
      }
    }
  ]
}
