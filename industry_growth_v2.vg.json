{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#F0F8FF",
  "vconcat": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/szho0067/Data-Vis-A2/refs/heads/main/Data%20A2/Industry_Growth_Grouped.csv"
      },
      "width": 390,
      "height": 300,
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "scale": {"domain": {"param": "brush"}},
          "title": "Year"
        },
        "y": {
          "field": "Total_Employed",
          "type": "quantitative",
          "title": "No. of People Employed"
        },
        "color": {
          "field": "Sector",
          "type": "nominal",
          "title": "Industry",
          "scale": {
            "domain": ["Manufacturing, Construction, and Trade","Other Services","Primary Industries","Public Services and Community Support","Professional , Financial and Administrative Services"],
            "range": ["#E76F51", "#F4A261", "#E9C46A", "#2A9D8F", "#264653"] 
          }
        },
        "tooltip": [
          {
            "field": "Date",
            "type": "temporal",
            "title": "Year"
          },
          {
            "field": "Sector",
            "type": "nominal",
            "title": "Industry"
          },
          {
            "field": "Total_Employed",
            "type": "quantitative",
            "title": "No. of Employed People"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/szho0067/Data-Vis-A2/refs/heads/main/Data%20A2/Industry_Growth_Grouped.csv"
      },
      "width": 390,
      "height": 50,
      "mark": "line",
      "params": [{"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}],
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "title": "Year"
        },
        "y": {
          "field": "Total_Employed",
          "type": "quantitative",
          "title": "No. of Employed People"
        },
        "color": {
          "field": "Sector",
          "type": "nominal",
          "title": "Industry"
        }
      }
    }
  ]
}
