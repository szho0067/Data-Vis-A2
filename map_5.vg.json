{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Percentage of Employed People within the State",
    "width": 300,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/szho0067/Data-Vis-A2/refs/heads/main/Data%20A2/aggregated_employment_data_average.csv"
    },
    "transform": [
      {
        "lookup": "State",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/szho0067/Data-Vis-A2/main/js/output_v2.json",
            "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
          },
          "key": "properties.STE_NAME21",
          "fields": ["properties", "type", "geometry"]
        }
      },
      {"filter": "datum.Date==Year_Filter"}
    ],
    "params": [
      {
        "name": "Year_Filter",
        "value": 1978,
        "bind": {
          "input": "range",
          "min": 1978,
          "max": 2024,
          "step": 1,
          "name": "Select the year:"
        }
      }
    ],
    "projection": {"type": "naturalEarth1"},
    "mark": "geoshape",
    "encoding": {
      "color": {"field": "Average_Employed", "type": "quantitative", "title": "Percentage of People Employed"},
      "tooltip": [
        {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
        {"field": "Average_Employed", "type": "quantitative", "title": "Percentage of People Employed"}
      ]
    }
  }
  