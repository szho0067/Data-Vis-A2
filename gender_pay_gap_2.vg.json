{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A side-by-side bar chart showing median income by gender across industries.",
    "title": "Median Income by Gender Across Industries",
    "width": 200,
    "data": {
      "url": "https://raw.githubusercontent.com/szho0067/Data-Vis-A2/main/Data%20A2/Gender%20Pay%20Gap%20copy.csv",
      "format": {"type": "csv"}
    },
    "encoding": {
      "x": {"field": "Industry", "type": "nominal", "axis": {"labelAngle": -45}}
    },
    "layer": [
      {
        "mark": {"type": "bar", "xOffset": -20, "size": 15, "color": "skyblue"},
        "encoding": {
          "y": {
            "field": "Median Male",
            "type": "quantitative",
            "axis": {"title": "Median Income"}
          }
        }
      },
      {
        "mark": {"type": "bar", "xOffset": 18, "size": 15, "color": "orange"},
        "encoding": {
          "y": {
            "field": "Median Female",
            "type": "quantitative"
          }
        }
      },
      {
        "mark": {"type": "text"},
        "encoding": {
          "fill": {
            "field": "legendTitle",
            "scale": {"range": ["skyBlue", "orange"]},
            "legend": {"title": null, "symbolType": "square", "orient": "bottom"}
          }
        }
      }
    ]
  }

  