{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/szho0067/Data-Vis-A2/refs/heads/main/Data%20A2/gender_growth_average.csv"
    },
    "width": 400,  
    "height": 400,
    "background": "#91d8ff", 
    "params": [
      {
        "name": "startYear",
        "value": 2004,
        "bind": {
          "input": "range",
          "min": 2004,
          "max": 2024,
          "step": 1
        }
      },
      {
        "name": "endYear",
        "value": 2022,
        "bind": {
          "input": "range",
          "min": 2004,
          "max": 2024,
          "step": 1
        }
      }
    ],
    "transform": [
      {
        "filter": "(year(datum.Date) >= startYear) && (year(datum.Date) <= endYear)"
      }
    ],
    "mark": "line",
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "title": "Year"
      },
      "y": {
        "field": "Average_Employed",
        "type": "quantitative",
        "title": "No. of Employed People"
      },
      "color": {
        "field": "Category",
        "type": "nominal",
        "title": "Category"
      }
    }
  }
  