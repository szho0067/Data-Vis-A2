{
    "data": {
      "name": "industry_pay_data",
      "url": "https://raw.githubusercontent.com/szho0067/Data-Vis-A2/refs/heads/main/Data%20A2/Industry_Pay_V3.csv"
    },
    "background": "#F0F8FF",
    "width": "container",
    "height": 475,

    "transform": [
      {
        "filter": "datum.Years == select_year"
      }
    ],
    "params": [
      {
        "name": "select_year",
        "value": 2014,
        "bind": {
          "input": "range",
          "min": 2014,
          "max": 2023,
          "step": 1,
          "name": "Select Year:"
        }
      }],

    "encoding": {
      "x": {
        "field": "Median Weekly Earnings",
        "type": "quantitative",
        "title": "Median Weekly Earnings ($)",
        "scale": {
          "domain": [1, 2800]
        }
      },
      "y": {
        "field": "State and territory",
        "type": "nominal"
      },
      "color": {
        "field": "Industry",
        "type": "nominal",
        "title": "Industry",
        "legend": "right"
      }
    },
    "layer": [
      {
        "mark": "line",
        "encoding": {
          "detail": {
            "field": "State and territory",
            "type": "nominal"
          },
          "color": {
            "value": "#BBBBBB"
          }
        }
      },
      {
        "mark": {
          "type": "point",
          "filled": true,
          "opacity": 0.6
        },
        "encoding": {
          "tooltip": [
            {
              "field": "Industry",
              "type": "nominal",
              "title": "Industry"
            },
            {
              "field": "Median Weekly Earnings",
              "type": "quantitative",
              "title": "Median Weekly Earnings ($)"
            },
            {
              "field": "Years",
              "type": "quantitative",
              "title": "Year"
            }
          ],
          "color": {
            "field": "Industry",
            "type": "nominal",
            "scale": {
            "domain": ["Manufacturing, Construction, and Trade","Other Services","Primary Industries","Public Services and Community Support","Professional , Financial and Administrative Services"],
            "range": ["#E76F51", "#F4A261", "#E9C46A", "#2A9D8F", "#219EBC"] 
          }
            
          }
        }
      }
    ]
  }
  