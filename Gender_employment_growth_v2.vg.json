{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#F0F8FF",
  "vconcat": [
    {
      "width": "container",
      "height": 300,
      "data": {
        "url": "https://raw.githubusercontent.com/szho0067/Data-Vis-A2/refs/heads/main/Data%20A2/gender_growth_average.csv"
      },
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "timeUnit": "year",
          "scale": {"domain": {"param": "brush"}},
          "title": "Year"
        },
        "y": {
          "field": "Average_Employed",
          "type": "quantitative",
          "title": "No. of Employed People"
        },
        "color": {
          "field": "Category",
          "type": "nominal",
          "title": "Category",
          "scale": {
            "domain": ["Total", "Male", "Female"],
            "range": ["#808080", "#1f77b4", "#ff69b4"]
          }
        },
        "tooltip": [
          {"field": "Date", "type": "temporal", "timeUnit": "year", "title": "Year"},
          {"field": "Average_Employed", "type": "quantitative", "title": "No. of Employed People"},
          {"field": "Category", "type": "nominal", "title": "Category"}
        ]
      }
    },
    {
      "width": "container",
      "height": 50,
      "data": {
        "url": "https://raw.githubusercontent.com/szho0067/Data-Vis-A2/refs/heads/main/Data%20A2/gender_growth_average.csv"
      },
      "mark": "line",
      "params": [
        {
          "name": "brush",
          "select": {
            "type": "interval",
            "encodings": ["x"]
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "timeUnit": "year",
          "title": "Year"
        },
        "y": {
          "field": "Average_Employed",
          "type": "quantitative",
          "title": "No. of Employed People"
        },
        "color": {
          "field": "Category",
          "type": "nominal",
          "title": "Gender",
          "scale": {
            "domain": ["Total", "Male", "Female"],
            "range": ["#808080", "#1f77b4", "#ff69b4"]
          }
        },
        "tooltip": [
          {"field": "Date", "type": "temporal", "timeUnit": "year", "title": "Year"},
          {"field": "Average_Employed", "type": "quantitative", "title": "No. of Employed People"},
          {"field": "Category", "type": "nominal", "title": "Category"}
        ]
      }
    }
  ]
}
